<mvc:View controllerName="project1.controller.Message"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <Panel id="_IDGenPanel1" headerText="{i18n>serviceFormHeaderText}">
            <form:SimpleForm id="_IDGenSimpleForm1" editable="true" layout="ColumnLayout">
                <Label id="_IDGenLabel1" text="Név"/>
                <Input id="_IDGenInput1" required="true" value="{/name}" width="200px" />
                <Label id="_IDGenLabel3" text="E-mail"/>
                <Input id="_IDGenInput3" required="true" value="{/email}" width="200px"/>
                    
                <Label id="_IDGenLabel4" text="Üzenet"/>
                <Input id="_IDGenInput4" value="{/message}" width="400px"/>

            </form:SimpleForm>
            <VBox id="_IDGenVBox1" width="100%" alignItems="Center">
                <Button id="_IDGenButton1" 
                icon="sap-icon://save"
                text="{i18n>serviceFormButtonText}"
                press="onSubmit"></Button>
            </VBox>
        </Panel>
    </Page>
</mvc:View>
