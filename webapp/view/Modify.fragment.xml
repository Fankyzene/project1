<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:l="sap.ui.layout"
		xmlns:f="sap.ui.layout.form"
		xmlns:core="sap.ui.core">
	<Dialog id="modifyDialog" title="Title">
		<beginButton>
			<Button  text="OK" type="Emphasized" press="handleDialogOkButton"/>
		</beginButton>
		<endButton>
			<Button id="_IDGenButton2" text="Cancel" press="handleDialogCancelButton"/>
		</endButton>
		<l:VerticalLayout id="_IDGenVerticalLayout1"
				class="sapUiContentPadding"
				width="100%">
			<f:SimpleForm
					id="appointmentCreateForm"
					editable="true"
					layout="ResponsiveGridLayout"
					singleContainerFullSize="false">
				<Label id="_IDGenLabel1" text="Title" labelFor="appTitle"/>
				<Input id="appTitle" maxLength="255"/>
				<Label id="_IDGenLabel2" text="Additional information" labelFor="inputInfo"/>
				<Input id="moreInfo" maxLength="255"/>
				<Label id="_IDGenLabel3" text="From" labelFor="startDate"/>
				<DateTimePicker
						id="DTPStartDate"
						required="true"
						visible="{= !${allDay>/allDay}}"
						change="handleDateTimePickerChange"/>
				<DatePicker
						id="DPStartDate"
						required="true"
						visible="{= ${allDay>/allDay}}"
						change="handleDatePickerChange"/>
				<Label id="_IDGenLabel4" text="To" labelFor="endDate"/>
				<DateTimePicker
						id="DTPEndDate"
						required="true"
						visible="{= !${allDay>/allDay}}"
						change="handleDateTimePickerChange"/>
				<DatePicker
						id="DPEndDate"
						required="true"
						visible="{= ${allDay>/allDay}}"
						change="handleDatePickerChange"/>
				<CheckBox
						id="allDay"
						text="All-day"
						selected="{allDay>/allDay}"
						select="handleCheckBoxSelect"/>
				<Label id="_IDGenLabel5" text="Type" labelFor="appType"/>
				<Select
						id="appType"
						items="{/supportedAppointmentItems}">
					<core:Item id="_IDGenItem1" key="{type}" text="{text}" />
				</Select>
			</f:SimpleForm>
		</l:VerticalLayout>
	</Dialog>
</core:FragmentDefinition>