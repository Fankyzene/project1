<mvc:View controllerName="project1.controller.Service"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:vbm="sap.ui.vbm"
    
	xmlns:core="sap.ui.core"
	xmlns:unified="sap.ui.unified"
	>
    <Page id="page" title="{i18n>title}">
        <VBox id="_IDGenVBox1" alignItems="Center">
            <vbm:GeoMap id="GeoMap" />
        </VBox>
        <content>
            <ObjectHeader id="_IDGenObjectHeader1"
			intro="{services>Address}"
			title="{services>Name}"/>
            <HBox id="_IDGenHBox1" alignItems="End">
                <Button  text="Írjon nekünk üzenetet!" press="onPress" />   
            </HBox>
            <SinglePlanningCalendar
			id="SPC1"
			class="sapUiSmallMarginTop"
			title= "Időpont foglalása szervízre"
			viewChange="handleViewChange"
			appointmentSelect="handleAppointmentSelect"
			headerDateSelect="handleHeaderDateSelect"
			startDateChange="handleStartDateChange"
			appointmentDrop="handleAppointmentDrop"
			appointmentResize="handleAppointmentResize"
			appointmentCreate="handleAppointmentCreateDnD"
			moreLinkPress="handleMoreLinkPress"
			startDate="{path: '/startDate'}"
			enableAppointmentsDragAndDrop="{settings>/enableAppointmentsDragAndDrop}"
			enableAppointmentsResize="{settings>/enableAppointmentsResize}"
			enableAppointmentsCreate="{settings>/enableAppointmentsCreate}"
			stickyMode="{settings>/stickyMode}"
			appointments="{path: '/appointments'}">
			<actions>
				<Button id="addNewAppointment" text="Create" press="handleAppointmentCreate" tooltip="Add new appointment" />
				</actions>
			<views>
				<SinglePlanningCalendarDayView id="_IDGenSinglePlanningCalendarDayView1" key="DayView" title="Day" />
				<SinglePlanningCalendarWorkWeekView id="_IDGenSinglePlanningCalendarWorkWeekView1" key="WorkWeekView" title="Work Week" />
				<SinglePlanningCalendarWeekView id="_IDGenSinglePlanningCalendarWeekView1" key="WeekView" title="Week" />
				<SinglePlanningCalendarMonthView id="_IDGenSinglePlanningCalendarMonthView1" key="MonthView" title="Month" />
			</views>
			<appointments>
				<unified:CalendarAppointment id="_IDGenCalendarAppointment1"
					title= "{title}"
					text= "{text}"
					type= "{type}"
					icon= "{icon}"
					startDate= "{startDate}"
					endDate= "{endDate}">
				</unified:CalendarAppointment>
			</appointments>
		</SinglePlanningCalendar>
        </content>
    </Page>
</mvc:View>
